<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_height"
                android:background="@color/gray">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/home_up_bg"
            android:clickable="true"
            android:onClick="onBackClicked"
            android:layout_alignParentLeft="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"
                android:paddingTop="@dimen/action_bar_icon_vertical_padding"
                android:paddingBottom="@dimen/action_bar_icon_vertical_padding"
                android:layout_marginRight="4dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitCenter"/>
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/action_bar_subtitle_size"
                android:textColor="#666"
                android:text="@string/app_name"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/ic_share"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="match_parent"
            android:src="@drawable/ic_social_share"
            android:paddingTop="@dimen/action_bar_icon_vertical_padding"
            android:paddingBottom="@dimen/action_bar_icon_vertical_padding"
            android:clickable="true"
            android:onClick="onButtonClicked"
            android:background="@drawable/home_up_bg"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"/>
    <View
            android:id="@+id/split_v_1"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/ic_share"
            android:background="#cacaca"/>
    <ImageView
            android:id="@+id/ic_comment"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="match_parent"
            android:src="@drawable/ic_comment"
            android:paddingTop="@dimen/action_bar_icon_vertical_padding"
            android:paddingBottom="@dimen/action_bar_icon_vertical_padding"
            android:clickable="true"
            android:onClick="onButtonClicked"
            android:background="@drawable/home_up_bg"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/split_v_1"
            android:scaleType="fitCenter"/>
    <View
            android:id="@+id/split_v_2"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/ic_comment"
            android:background="#cacaca"/>
    <View
            android:id="@+id/split_h"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#cacaca"/>
</RelativeLayout>

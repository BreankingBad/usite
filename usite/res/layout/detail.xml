<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">
    <include layout="@layout/action_bar_layout"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include layout="@layout/empty_view"/>
        <WebView
                android:id="@+id/webview_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:scrollbarThumbHorizontal="@drawable/scrollbar_vertical_track"
                android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
                android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
                android:scrollbarSize="4dp"
                android:fadingEdge="none"
                android:padding="8dp"/>
        <LinearLayout
                android:id="@+id/article_bottom"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#44000000"
                android:visibility="gone"
                android:weightSum="2"
                android:layout_gravity="bottom">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                <ImageView
                        android:id="@+id/ic_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_comment"
                        android:background="@drawable/highlight_bg"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:adjustViewBounds="true"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:scaleType="fitCenter"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                <ImageView
                        android:id="@+id/ic_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/share_photo_normal"
                        android:background="@drawable/highlight_bg"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:adjustViewBounds="true"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:scaleType="fitCenter"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
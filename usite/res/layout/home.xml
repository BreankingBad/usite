<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:background="#ff9900">
        <TextView
                android:id="@+id/ic_drawer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_navigation_drawer"
                android:paddingRight="8dp"
                android:clickable="true"
                android:onClick="onDrawerButtonClicked"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:text="@string/app_name"
                android:background="@drawable/home_button_bkg"
                android:textSize="18sp"/>
        <ImageButton
                android:id="@+id/btn_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_bkg"
                android:contentDescription="@null"
                android:layout_marginRight="12dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:onClick="onLoginButtonClicked"
                android:src="@drawable/ic_avatar_2"
                android:layout_alignParentRight="true"/>
        <View
                android:id="@+id/split_h"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e6e6e6"/>
    </RelativeLayout>
    <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <com.chenjishi.u148.view.TabPageIndicator
                    android:id="@+id/pager_tab_strip"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#E5E5E5"/>
            <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <ListView
                android:id="@+id/list_menu"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:listSelector="@drawable/highlight_bg"
                android:divider="#555"
                android:dividerHeight="1px"
                android:layout_gravity="left"
                android:background="#373b3e"/>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>





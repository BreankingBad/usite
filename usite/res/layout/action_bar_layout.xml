<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@drawable/ic_bar_yellow">
    <LinearLayout
            android:id="@+id/home_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/home_up_bg">
        <ImageView
                android:id="@+id/actionbar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginRight="4dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_ab_back"/>
        <TextView
                android:id="@+id/tag_actionbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:paddingRight="8dp"
                android:textSize="@dimen/action_bar_subtitle_size"
                android:textColor="@color/white"
                android:text="@string/app_name_simple"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/icon_menu2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_comment"
            android:background="@drawable/home_up_bg"
            android:paddingTop="@dimen/action_bar_icon_vertical_padding"
            android:paddingBottom="@dimen/action_bar_icon_vertical_padding"
            android:layout_gravity="center"
            android:onClick="onButtonClicked"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:visibility="gone"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:scaleType="fitCenter"/>
    <ImageView
            android:id="@+id/content_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/share_photo_normal"
            android:layout_toLeftOf="@id/icon_menu2"
            android:background="@drawable/home_up_bg"
            android:paddingTop="@dimen/action_bar_icon_vertical_padding"
            android:paddingBottom="@dimen/action_bar_icon_vertical_padding"
            android:layout_gravity="center"
            android:onClick="onButtonClicked"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:visibility="gone"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:scaleType="fitCenter"/>
</RelativeLayout>
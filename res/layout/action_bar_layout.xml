<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/action_bar_height"
             android:background="@color/actionbar_bg_color">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/home_up"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/highlight_bg">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:src="@drawable/abs__ic_ab_back_holo_light"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon"
                    android:layout_marginTop="@dimen/action_bar_icon_vertical_padding"
                    android:layout_marginBottom="@dimen/action_bar_icon_vertical_padding"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitCenter"/>
        </LinearLayout>
        <TextView
                android:id="@+id/tag_actionbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/home_up"
                android:textStyle="bold"
                android:textSize="@dimen/action_bar_subtitle_text_size"
                android:textColor="@color/solid_white"
                android:text="@string/app_name"/>
        <ImageView
                android:id="@+id/icon_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abs__ic_menu_moreoverflow_normal_holo_dark"
                android:layout_alignParentRight="true"
                android:background="@drawable/highlight_bg"
                android:paddingTop="@dimen/action_bar_icon_vertical_padding"
                android:paddingBottom="@dimen/action_bar_icon_vertical_padding"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="fitCenter"/>

    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:layout_height="2px"
          android:background="@color/actionbar_top_line_color"
          android:layout_gravity="top"/>
    <View android:layout_width="match_parent"
          android:layout_height="2px"
          android:background="@color/actionbar_bottom_line_color"
          android:layout_gravity="bottom"/>
</FrameLayout>

